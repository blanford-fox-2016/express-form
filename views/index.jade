extends layout

block content
  h1= title
  p Welcome to #{title}
  br
  p.bottom-border Silakan isi form dibawah ini

  form(action='/users' method='get')
    .input-group
      label Nama kamu :
      input(
        type='text'
        name='name'
      )
      .clearfix

    .input-group
      label Katakan sesuatu :
      input(
        type='text'
        name='say'
      )
      .clearfix

    .input-group
      input(
        type = 'submit'
        value = 'submit'
      )
      .clearfix
